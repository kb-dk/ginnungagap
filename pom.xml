    <yggdrasil.version>1.3.8</yggdrasil.version>
    <logback.version>1.2.0</logback.version>
    <jwat.version>1.1.1</jwat.version>
    <assembly.home.env.name>GINNUNGAGAP_HOME</assembly.home.env.name>
    <assembly.home.env.name.ref>${GINNUNGAGAP_HOME}</assembly.home.env.name.ref>
    <assembly.conf.env.file>GINNUNGAGAP_CONF_FILE</assembly.conf.env.file>
    <assembly.conf.env.file.ref>${GINNUNGAGAP_CONF_FILE}</assembly.conf.env.file.ref>
    <assembly.main.class.name>dk.kb.ginnungagap.Ginnungagap</assembly.main.class.name>
    <failOnMissingWebXml>false</failOnMissingWebXml>
  </properties>

  <developers>
    <developer>
      <name>Jonas Lindberg Frellesen</name>
      <email>jolf@kb.dk</email>
      <organization>kb</organization>
      <organizationUrl>http://kb.dk</organizationUrl>
      <roles>
        <role>Developer</role>
      </roles>
    </developer>
    <developer>
      <name>Claus Jensen</name>
      <email>cjen@kb.dk</email>
      <organization>kb</organization>
      <organizationUrl>http://kb.dk</organizationUrl>
      <roles>
        <role>Reviewer</role>
      </roles>
    </developer>
  </developers>

  <dependencies>
    <dependency>
      <groupId>org.springframework.boot</groupId>
      <artifactId>spring-boot-starter-web</artifactId>
